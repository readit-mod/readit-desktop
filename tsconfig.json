{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
        "@main/*": ["./src/main/*"],
        "@preload/*": ["./src/preload/*"],
        "@utils/*": ["./src/utils/*"],
        "@lib/*": ["./src/lib/*"],
        "@/*": ["./*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src"],
}
